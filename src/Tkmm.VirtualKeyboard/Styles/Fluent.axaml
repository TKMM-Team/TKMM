<Styles xmlns="https://github.com/avaloniaui"
        xmlns:vk="using:Tkmm.VirtualKeyboard"
        xmlns:layouts="using:Tkmm.VirtualKeyboard.Layouts"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <vk:VirtualKeyboard>
                <vk:VirtualKeyboard.KeyboardLayout>
                    <layouts:KeyboardLayoutUS />
                </vk:VirtualKeyboard.KeyboardLayout>
            </vk:VirtualKeyboard>
        </Border>
    </Design.PreviewWith>
    
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/VirtualKeyboard.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <StyleInclude Source="/VirtualKey.axaml" />
    <StyleInclude Source="/VirtualShiftKey.axaml" />
    <StyleInclude Source="/Layouts/KeyboardLayoutUS.axaml" />
</Styles>
