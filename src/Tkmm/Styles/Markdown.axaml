<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avedit="https://github.com/avaloniaui/avaloniaedit"
        xmlns:avaMark="clr-namespace:AvaMark;assembly=AvaMark"
        xmlns:amc="clr-namespace:AvaMark.Controls;assembly=AvaMark">
    <Design.PreviewWith>
        <avaMark:MarkdownViewer Width="1000"
                                Height="1000"
                                Markdown="**Test** &#x0A; > Test `Test`"
                                Margin="15"/>
    </Design.PreviewWith>
    
    <StyleInclude Source="avares://AvaMark/Styles/Fluent.axaml" />
    
    <Style Selector="amc|InlineCodeBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMono}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <Border CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="3,0,3,1"
                            Background="{TemplateBinding Background}">
                        <TextBlock Text="{TemplateBinding Text}"
                                   VerticalAlignment="Bottom"
                                   Margin="{TemplateBinding Padding}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   FontStyle="{TemplateBinding FontStyle}"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   FontFeatures="{TemplateBinding FontFeatures}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontStretch="{TemplateBinding FontStretch}"
                                   Foreground="{TemplateBinding Foreground}" />
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>